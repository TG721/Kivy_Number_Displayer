<Button>
    font_size: 26
    size_hint: (0.6,0.3)
<TextInput>
    font_size:26
<Label>
    font_size:34
<MyLayout>
    canvas.before:
        Color:
            rgba:(0,95/255,95/255,1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        size: root.width, root.height
        TextInput:
            id:number_input
            hint_text: "Enter number"
            size_hint: 0.5, None
            background_color: (1,1,1,1)
            background_normal: ""
            pos_hint: {"center_x":0.5,"top":0.95}
        RoundedButton:
            id: show_btn
            text: "Show"
            pos_hint: {"x":0.25, "y":0}
            on_press: root.showFunc()
        Label:
            id: result_num
            text: ""
            multiline:True
            valign:"center"
            text_size: self.size
            font_name: "acad_nusx_geo.ttf"
            size_hint: 0.9, None
            pos_hint: {"center_x":0.5, "y":0.45}


<RoundedButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1) if self.state == 'normal' else (1, 0, 0, 1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [40]